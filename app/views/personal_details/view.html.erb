<h1>personal details</h1><br>
<table >
  <tr>
    <th>S.no</th>
    <th>Employee ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Gender</th>
    <th>Date of Birth</th>
    <th>Contact</th>
    <th>Address</th>
  </tr>
<% PersonalDetail.all.each do |person|  %>
  <% if(person.comp_id=='1') %>
      <tr>
        <td><%= person.id %></td>
        <td><%= person.emp_id %></td>
        <td><%= person.name %></td>
        <td><%= person.email %></td>
        <td><%= person.gender %></td>
        <td><%= person.dob %></td>
        <td><%= person.contact %></td>

    <%end %>
    <% if(address=Address.find_by_comp_id_and_emp_id( '1', person.emp_id)) %>
      <td>
        <%= address.doorno %>,
        <%= address.street %>,
        <%= address.area %>,
        <%= address.city %>,
        <%= address.state %>,
        <%= address.pincode %>

      </td>
    <%end %>
    </tr>
  <% end %>

</table>
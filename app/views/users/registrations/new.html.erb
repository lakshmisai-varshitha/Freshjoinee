
<div class="container">
  <h1>Freshjoinee signup</h1>
  <p>please fill in the sign up form</p>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name, placeholder:"your name",autofocus:true,style:"border:10px light blue",%>
  </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,placeholder:"your emailid", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :company_name %><br/>
    <%=f.text_field :company_name, placeholder:"your company name",autofocus: true%>

    </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,placeholder:"password" ,autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation,placeholder:"re-enter your password" ,autocomplete: "off" %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

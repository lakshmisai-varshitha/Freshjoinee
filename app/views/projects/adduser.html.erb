<html>

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>




<div class="addform">

           <h2 style="text-align:center;">Fill the required details</h2>

<%= form_tag("/projects/forsaving", method: "get") do %>
               <div class="form-group">
  <%= label_tag(:name, "Name") %><br>
  <%= text_field_tag(:name) %><br>
               </div>
             <div class="form-group">
  <%= label_tag(:email, "Email") %><br>
  <%= text_field_tag(:email) %><br>
             </div>
             <div class="form-group">
  <%= label_tag(:password, "Password") %><br>
  <%= text_field_tag(:password) %><br>
             </div>
             <div class="form-group">
  <%=label_tag(:department,"Department") %><br>
  <%= select_tag(:department,options_for_select([['hr','hr'],['developer','developer'],['admin','admin'],['sales','sales'],['marketing','marketing'],['support','support'],['manager','manager']]))%><br>
             </div>
             <div class="form-group"><%= check_box_tag (:personal_details) %>
  <%= label_tag(:personal_details,"Personal Details") %><br><br>

               <%= check_box_tag (:finance_details) %>
  <%= label_tag(:finance_details,"Finance Details") %><br><br>

               <%= check_box_tag (:education_details) %>
  <%= label_tag(:education_details,"Education Details") %><br><br>

               <%= check_box_tag (:employment_details) %>
  <%= label_tag(:employment_details,"Employment Details") %><br>
             </div>
             <div class="form-group">
               <%= submit_tag("Submit",class:"btn btn-primary btn-lg") %></div>
<% end %>
           </div>

         </div>



</html>





